{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pomodoro",
  "title": "Pomodoro",
  "description": "Pomodoro extension with menu-bar timer",
  "icon": "icon.png",
  "keywords": [
    "pomodoro",
    "timer"
